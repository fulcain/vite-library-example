{
    "name": "test-package-fulcain",
    "version": "2.0.2",
    "type": "module",
    "description": "This is a test for creating an npm package",
    "_comment": "Specify the build dir for vite build",
    "files": ["dist", "README.md"],

    "_comment": "typically points to the entry point for CommonJS usage",
    "main": "./dist/fulcain.umd.cjs",

    "_comment": "points to the entry point for ES Module usage.",
    "module": "./dist/fulcain.js",

    "_comment": "The file related to all types",
    "typings": "./dist/main.d.ts",

    "_comment": "Npm tags",
    "keywords": ["library", "fulcain", "ts"],
    "author": "fulcain",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fulcain/vite-library-example.git"
    },

    "_comment": "used to define the entry points for different environments.",
    "exports": {
        "_comment": "Dual package support",
        ".": {
            "import": "./dist/fulcain.js",
            "require": "./dist/fulcain.umd.cjs"
        }
    },
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview"
    },
    "devDependencies": {
        "@rollup/plugin-typescript": "^8.2.1",
        "@types/node": "^17.0.35",
        "prettier": "2.6.2",
        "rollup-plugin-typescript-paths": "^1.3.0",
        "tslib": "^2.4.0",
        "typescript": "^5.0.2",
        "vite": "^4.4.5"
    }
}
